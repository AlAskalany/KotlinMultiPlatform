<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity">

    <EditText android:id="@+id/activity_main_et_location"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:inputType="textCapWords"
              android:hint="Add your favourite locations"/>

    <Button
            android:id="@+id/activity_main_button_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_main_et_location"
            android:text="Add Location"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/activity_main_rv_location"
            android:layout_width="match_parent"
            android:layout_below="@+id/activity_main_button_add"
            android:layout_height="200dp">

    </androidx.recyclerview.widget.RecyclerView>


    <TextView
            android:id="@+id/activity_main_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_main_rv_location"
            android:layout_marginTop="10dp"
            android:text="Hello World!"/>

</RelativeLayout>